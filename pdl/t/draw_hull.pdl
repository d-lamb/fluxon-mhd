*PDL::Graphics::PGPLOT::Window::draw_hull = \&draw_hull;

sub draw_hull {	
    my $w = shift;
    my $vertex = shift;
    my $opt = shift;

    my $hull = $vertex->hull;

    $w->points($hull->(0:1)->mv(0,-1)->dog,$opt);
    $w->hold;
    $w->line($hull->(2:3)->mv(0,-1)->dog);
    $w->line($hull->(2,pdl($hull->dim(1)-1,0)), $hull(3,pdl($hull->dim(1)-1,0)));
    $w->release;
}
    